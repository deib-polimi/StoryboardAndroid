${IMPORTS}

public class ${ACTIVITY_NAME} extends Fragment {

    @Override
    public View onCreateView(LayoutInflater inflater, ViewGroup container,
                             Bundle savedInstanceState) {
        // Inflate the layout for this fragment
        View view = inflater.inflate(R.layout.${ACTIVITY_LAYOUT}, container, false);
        ${FAB}
        setupView(view);
        return view;
    }

    private void setupView(View view){
            List<String> content = new ArrayList<String>();
            for (int i = 1; i<=20; i++){
                content.add("Item "+Integer.toString(i));
            }

            ArrayAdapter<String> adapter=new ArrayAdapter<String>(getActivity(), R.layout.${ACTIVITY_LAYOUT}_cell,content);
            GridView gridView = (GridView) view.findViewById(R.id.gridview);
            gridView.setAdapter(adapter);
            ${INTENT}
        }
}